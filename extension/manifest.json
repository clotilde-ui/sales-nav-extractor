{
  "manifest_version": 3,
  "name": "Sales Navigator Export",
  "version": "1.2.2",
  "description": "Exporte les leads depuis LinkedIn Sales Navigator en CSV",
  "permissions": ["activeTab", "scripting", "downloads"],
  "host_permissions": ["https://www.linkedin.com/sales/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["https://www.linkedin.com/sales/*"],
      "js": ["parser.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
